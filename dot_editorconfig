# Editor configuration file (http://EditorConfig.org)
# https://github.com/skolobov/dotfiles

root = true

# Defaults for all files
[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
charset = utf-8
indent_size = 2
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
# Markdown uses the trailing whitespaces.
# https://daringfireball.net/projects/markdown/syntax#block
