[user]
	name  = Sergei Kolobov
	email = sergei@kolobov.com
[core]
  excludesfile = ~/.config/git/ignore
  pager = diff-so-fancy | less --tabs=2 -RFX
  whitespace = -indent-with-non-tab,trailing-space,cr-at-eol
  quotepath = false
  autocrlf = input
[alias]
  br = branch
  co = checkout
  ci = commit
  glog = log -E -i --grep
  sla = log --oneline --decorate --graph --all
  st = status
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
[commit]
	template = ~/.config/git/msg_commit
[diff]
  indentHeuristic = true
  compactionHeuristic = true
[apply]
  whitespace = nowarn
[merge]
  summary = true
  conflictstyle = diff3
[push]
  default = matching
[hub]
	protocol = https
[color]
  ui = always
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
